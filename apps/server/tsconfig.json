{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "baseUrl": ".",
    "jsx": "react",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "paths": {
      "@noted/types": ["../../packages/types/src"],
      "@noted/email-templates": ["../../packages/email-templates/src"]
    },
    "types": ["node", "react"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}

